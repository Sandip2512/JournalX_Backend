{
    "version": 2,
    "builds": [
        {
            "src": "app/main.py",
            "use": "@vercel/python"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "app/main.py"
        }
    ],
    "env": {
        "MONGODB_URI": "@mongodb_uri",
        "JWT_SECRET": "@jwt_secret",
        "JWT_ALGORITHM": "@jwt_algorithm",
        "SENDGRID_API_KEY": "@sendgrid_api_key",
        "GEMINI_API_KEY": "@gemini_api_key"
    }
}